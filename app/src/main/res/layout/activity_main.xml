<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lescale_imageView"
            style="@style/imageViewStyle"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginTop="@dimen/margin_top"
            android:cropToPadding="true"
            android:maxHeight="120dp"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:src="@drawable/lescale_logo" />


        <TextView
            android:id="@+id/name_text"
            style="@style/textViewStyle"
            android:layout_weight="8"
            android:paddingBottom="@dimen/padding_bottom"
            android:text="@string/business"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/location_icon"
                style="@style/iconViewStyle"
                android:src="@drawable/location_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_top"
                    android:paddingLeft="@dimen/padding_left"
                    android:text="1 rue des Bosquets"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/city_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_left"
                    android:text="67240 BISCHWILLER"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/country_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_bottom"
                    android:paddingLeft="@dimen/padding_left"
                    android:text="France"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phone_icon"
                style="@style/iconViewStyle"
                android:src="@drawable/phone_icon" />

            <TextView
                android:id="@+id/tel_text"
                style="@style/textViewStyle"
                android:paddingBottom="@dimen/padding_bottom"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/phone_number"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/web_icon"
                style="@style/iconViewStyle"
                android:src="@drawable/web_icon" />

            <TextView
                android:id="@+id/weblink_text"
                style="@style/textViewStyle"
                android:text="@string/web_link"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mail_icon"
                style="@style/iconViewStyle"
                android:src="@drawable/mail_icon" />

            <TextView
                android:id="@+id/mail_text"
                style="@style/textViewStyle"
                android:paddingLeft="@dimen/padding_left"
                android:text="@string/mail_link"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
